{
  "lexicon": 1,
  "id": "dev.npmx.actor.profile",
  "defs": {
    "main": {
      "key": "literal:self",
      "type": "record",
      "record": {
        "type": "object",
        "properties": {
          "avatar": {
            "type": "blob",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000,
            "description": "AKA, 'profile picture'"
          },
          "website": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string",
            "maxLength": 2560,
            "description": "Free-form profile description text.",
            "maxGraphemes": 256
          },
          "displayName": {
            "type": "string",
            "maxLength": 640,
            "maxGraphemes": 64
          }
        }
      },
      "description": "A declaration of an npmx account profile."
    }
  }
}
